<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/off_white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    
    <style name="StandardEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="backgroundTint">@color/off_white</item>
    </style>

    <style name="StandardTextLight" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StandardTextDark" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="StandardToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>



</resources>