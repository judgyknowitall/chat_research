<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ivy.learn.chat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Chat App: main activities (no chat libraries used) -->
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChatLobbyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewChatroomActivity"
            android:parentActivityName=".ChatLobbyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChatRoomActivity"
            android:parentActivityName=".ChatLobbyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GroupChatActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".ChatLobbyActivity"/>
        <activity
            android:name=".SeeAllMembersActivity"
            android:parentActivityName=".ChatRoomActivity"
            android:screenOrientation="portrait" />

        <!-- External Libraries: run these activities seperately when testing -->
        <activity
            android:name=".chatKit.DialogListActivity"
            android:exported="true"/>

        <activity
            android:name=".chatKit.MessageListActivity"
            android:parentActivityName=".chatKit.DialogListActivity"/>

            android:screenOrientation="portrait"
            android:parentActivityName=".GroupChatActivity"/>
    </application>

</manifest>